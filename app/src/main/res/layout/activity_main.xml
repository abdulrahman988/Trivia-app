<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/purple_200">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/trivia"
      android:layout_marginTop="80dp"
      android:textSize="30sp"
      android:textColor="@color/black"
      android:fontFamily="cursive"
      android:layout_gravity="center"/>
    <TextView
        android:id="@+id/counter_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_questions"
        android:layout_marginTop="80dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="right"
        android:layout_marginRight="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Score"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/highestScore_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <TextView
            android:id="@+id/questions_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/prev_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_media_previous"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/previous_button"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/true_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:text="@string/true_title"
            android:background="@color/teal_700"/>

        <Button
            android:id="@+id/false_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:text="@string/false_title"
            android:background="@color/teal_700"/>

        <ImageButton
            android:id="@+id/next_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_media_next"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/next_button"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

</LinearLayout>